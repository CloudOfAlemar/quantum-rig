<div class="container-fluid py-5 hero forge-hero">
  <div class="row justify-content-center">
    {{!-- Heading Column --}}
    <div class="col-12 mb-5 text-center">
      <h2 class="forge-heading">
        Create Your Ideal PC:
      </h2>
    </div>

    <form id="pc-build-form" class="forge-form mb-5 justify-content-center">
      <div class="form-group">
        <label for="build-name">Build Name</label>
        <input type="text" class="form-control" id="build-name" placeholder="Give a name to your build">
      </div>
      <div class="form-group">
        <label for="build-comments">Build Comments</label>
        <textarea class="form-control" id="build-comments" placeholder="Comments..."></textarea>
      </div>
    </form>
  </div>

  <div class="row pc-part-cards-row justify-content-center">
    {{#each partsArray as |part|}}
      {{!-- Part Column --}}
      <div class="col-5 px-0 mx-1">
        <div class="card pc-part-card" data-pc-part-card-name="{{part.name}}">
          <div class="card-header">
            {{!-- Button: Trigger Modal --}}
            <button type="button" class="btn btn-primary add-part-btn" data-toggle="modal" data-target="#{{part.name}}exampleModalCenter">
              Add {{part.name}} +
            </button>

            {{!-- Modal --}}
            <div class="modal fade" id="{{part.name}}exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="{{part.name}}exampleModalCenterTitle" aria-hidden="true">
              <div class="modal-dialog modal-dialog-centered" role="document">
                <div class="modal-content">
                  <div class="modal-header">
                    <h4 class="modal-title" id="exampleModalLongTitle">{{part.name}} Parts</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                      <span aria-hidden="true">&times;</span>
                    </button>
                  </div>
                  <div class="modal-body forge-modal-body">
                    <h5>Budget</h5>
                    <hr>
                    {{#each part.parts.budget as |pcPart|}}
                      <div class="pc-part-wrapper mb-4">
                        <p class="mb-2 pc-part-title">{{pcPart.name}}</p>
                        <p class="mb-2 pc-part-price">Price: ${{pcPart.price}}</p>
                        <button class="btn btn-success pc-part-btn" data-part-name="{{pcPart.name}}" data-part-category="budget" data-dismiss="modal">Add +</button>
                      </div>
                    {{/each}}

                    <h5>Mid-Range</h5>
                    <hr>
                    {{#each part.parts.mid_range as |pcPart|}}
                      <div class="pc-part-wrapper mb-4">
                        <p class="mb-2 pc-part-title">{{pcPart.name}}</p>
                        <p class="mb-2 pc-part-price">Price: ${{pcPart.price}}</p>
                        <button class="btn btn-success pc-part-btn" data-part-name="{{pcPart.name}}" data-part-category="mid-range" data-dismiss="modal">Add +</button>
                      </div>
                    {{/each}}

                    <h5>High-End</h5>
                    <hr>
                    {{#each part.parts.high_end as |pcPart|}}
                      <div class="pc-part-wrapper mb-4">
                        <p class="mb-2 pc-part-title">{{pcPart.name}}</p>
                        <p class="mb-2 pc-part-price">Price: ${{pcPart.price}}</p>
                        <button class="btn btn-success pc-part-btn" data-part-name="{{pcPart.name}}" data-part-category="high-end" data-dismiss="modal">Add +</button>
                      </div>
                    {{/each}}
                  </div>
                </div>
              </div>
            </div>

          </div>
          <div class="card-body">
            <p class="card-text">Name: <span class="part-selected" data-part-name="{{part.name}}">Not selected</span></p>
          </div>
        </div>
      </div>
    {{/each}}
  </div> {{!-- End Of Row --}}

  <div class="row justify-content-center">
    <button type="submit" class="btn build-pc-btn btn-lg" id="build-pc-btn">Build PC</button>
  </div>
</div>

<script src="/js/forge.js"></script>