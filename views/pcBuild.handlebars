<div class="container-fluid px-0 flex-grow-1 d-flex flex-column">
  <div class="hero hero-pcBuild w-100 py-5" style="text-align: center;">
    <h2>{{name}}</h2>
    <p>{{personal_comments}}</p>
    <p>Created by {{guest.name}} on {{format_date date_created}}</p>
    
    {{#if parts}}
    <div class="table-container">
      <table class="table table-dark table-striped my-5">
        <thead>
          <tr>
            <th scope="col">Type</th>
            <th scope="col">Name</th>
            <th scope="col">Description</th>
            <th scope="col">Price</th>
            <th scope="col">Amazon Link</th>
          </tr>
        </thead>
        <tbody>
          {{#each parts as |part|}}
          <tr>
            <td>{{part.type}}</td>
            <td>{{part.name}}</td>
            <td>{{part.description}}</td>
            <td>{{part.price}}</td>
            <td><a href="https://www.amazon.com/s?k={{part.name}}">Shop {{part.name}} @ amazon</a></td>
          </tr>
          {{/each}}
          {{#if total}}
          <tr>
            <td colspan="3"></td>
            <th scope="row">Total:</th>
            <td>{{total}}</td>
          </tr>
          {{/if}}
        </tbody>
      </table>
    </div>
    {{/if}}
    
    <div class="container" style="margin-top: 250px;">
      <div class="row justify-content-center">
        <div class="col-md-8">
          <div class="comments-section">
            {{#if commentaries.length}}
            <div class="card bg-light mb-4">
              <div class="card-header bg-dark text-white">
                <h2 class="text-center mb-0">Comments</h2>
              </div>
              <div class="card-body">
                {{#each commentaries as |comment|}}
                <div class="card mb-3">
                  <div class="card-body">
                    <div class="row">
                      <div class="col-md-9">
                        <p class="card-text">{{comment.text}}</p>
                        <h6 class="card-subtitle mb-2 text-muted">Commented by {{comment.guest.name}} on {{format_date comment.date_created}}</h6>
                      </div>
                      <div class="col-md-3 text-md-end">
                        <button class="btn btn-sm btn-danger" style="display: none;" data-id="{{comment.guest.id}}" data-id2="{{comment.id}}">DELETE</button>
                      </div>
                    </div>
                  </div>
                </div>
                {{/each}}
              </div>
            </div>
            {{/if}}
            
            <form class="mb-5">
              <div class="form-group">
                <textarea class="form-control" id="commentInput" rows="4" placeholder="Comment here..."></textarea>
              </div>
              <div class="text-center">
                <button class="btn btn-dark mt-3" id="commentButton" data-id="{{id}}">Add Comment</button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<script src="/js/pcBuild.js"></script>