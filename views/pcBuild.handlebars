<div class="text-center hero hero-pcBuild justify-content-center align-center text-center w-100" style="display: flex; flex-direction: column">
  <h2>{{name}}</h2>
  <p>{{personal_comments}}</p>
  <p>Created by {{guest.name}} on {{format_date date_created}}</p>
{{#if parts}}
<table class="table table-dark table-striped my-5 py-5">
  <thead>
    <tr>
      <th scope="col">Type</th>
      <th scope="col">Name</th>
      <th scope="col">Description</th>
      <th scope="col">Price</th>
      <th scope="col">Amazon Link</th>
    </tr>
  </thead>
  <tbody>
    {{#each parts as |part|}}
    <tr>
      <td>{{part.type}}</td>
      <td>{{part.name}}</td>
      <td>{{part.description}}</td>
      <td>{{part.price}}</td>
      <td><a href="https://www.amazon.com/s?k={{part.name}}">Shop {{part.name}} @ amazon</a></td>
    </tr>
    {{/each}}
    {{#if total}}
    <tr style="max-width: 70px; min-width: 70px;">
      <td></td>
      <td></td>
      <th scope="row">Total:</th>
      <td>{{total}}</td>
      <td></td>
    </tr>
    {{/if}}
  </tbody>
</table>
{{/if}}

<div class="container-flex text-dark w-100 justify-content-center align-center" style="display: flex; flex-direction: column">

    {{#if commentaries.length}}
        <div class="card text-white bg-transparent">
                <div class="card-header bg-dark mb-3">
                <div class="row">
                    <div class="col-12">
                        <h2>Comments</h2>
                    </div>
                </div>
                </div>
                {{#each commentaries as |comment|}}
                <div class="card w-100">
                <div class="card-body" style="color:black">
                    <div class="row">
                    <div class="col-9">
                        <p class="card-text">{{comment.text}}</p>
                        <h6 class="card-subtitle mb-2 text-muted">Commented by {{comment.guest.name}} on {{format_date comment.date_created}}</h6>
                    </div>
        
                    <div class="col-3">
                        <button class="btn btn-sm btn-danger" style="display: none;" data-id="{{comment.guest.id}}" data-id2="{{comment.id}}">DELETE</button>
                    </div>

                    </div>
                </div>
                </div>
                {{/each}}
        </div>
    {{/if}}
        <br>
        <form class="mb-3 text-center align-center justify-content-center w-100" style="display: flex; flex-direction: column">
        <div>
            <textarea class="form-control" id="commentInput" rows="4" placeholder="Comment here..."></textarea>
        </div>
        </form>
        <p>
            <button class="btn btn-dark" id="commentButton" data-id="{{id}}">Add Comment</button>
        </p>
    </div>

</div>

<script src="/js/pcBuild.js"></script>
