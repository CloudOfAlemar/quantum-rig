<!-- Loop over each object in the projects array -->

<div class='container-fluid hero'>
  <div class='row'>
    {{#each pcBuilds as |pcBuild|}}
      <div class='col-md-5'>
        <h2>
          <!-- Call helper function with triple brackets to render the emoji span as HTML -->
          <a href='/pcBuilds/{{pcBuild.id}}'>{{pcBuild.name}}</a>
        </h2>

    <p>Created by {{pcBuild.guest.name}} on {{format_date date_created}}</p>
  </div>
  <div class="col-md-7">
    <p>
      {{pcBuild.personal_comments}}
    </p>
  </div>
</div>