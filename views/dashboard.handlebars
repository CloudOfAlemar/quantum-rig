<div class="row">
  <div class="col-auto">
    <h2>Welcome, {{name}}!</h2>
  </div>
</div>

<div class="row mt-4">
  <div class="col-md-6">
    <h3>Create a New PC Build:</h3>

    <form class="form new-pcbuild-form">
      <div class="form-group">
        <label for="pcbuild-name">PC Build name:</label>
        <input class="form-input" type="text" id="pcbuild-name" name="pcbuild-name" />
      </div>
      <div class="form-group">
        <label for="pcbuild-comments">personal_comments:</label>
        <textarea class="form-input" id="pcbuild-comments" name="pcbuild-comments"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Create</button>
      </div>
    </form>
  </div>

  {{#if pcBuilds.length}}
  <div class="col-md-6 pcbuild-list">
    <h3>Current PC Builds:</h3>

    {{#each pcBuilds as |pcBuild|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h4><a href="/pcBuilds/{{pcBuild.id}}">{{pcBuild.name}}</a></h4>
      </div>
      <div class="col-md-4">
        <button class="btn btn-sm btn-danger" data-id="{{pcBuild.id}}">DELETE</button>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}
</div>

<script src="./js/dashboard.js"></script>
