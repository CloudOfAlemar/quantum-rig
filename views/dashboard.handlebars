<div class='container-fluid py-5 hero'>
  <div class='row'>
    <div class='col-auto'>
      <h2>Welcome, {{name}}!</h2>
    </div>
  </div>

    {{#if pcBuilds.length}}
      <div class='col-md-6 pcbuild-list'>
        <h3>Current PC Builds:</h3>

        {{#each pcBuilds as |pcBuild|}}
          <div class='row mb-2'>
            <div class='col-md-8'>
              <h4><a href='/pcBuilds/{{pcBuild.id}}'>{{pcBuild.name}}</a></h4>
            </div>
            <div class='col-md-4'>
              <button
                class='btn btn-sm btn-danger'
                data-id='{{pcBuild.id}}'
              >DELETE</button>
            </div>
          </div>
        {{/each}}
      </div>
    {{/if}}
  </div>
</div>

<script src="./js/dashboard.js"></script>
<script src="./js/logout.js"></script>